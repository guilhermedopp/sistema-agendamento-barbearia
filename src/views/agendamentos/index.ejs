<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Agenda</title>
    <style>
        body { font-family: sans-serif; padding: 20px; }
        
        /* Cabe√ßalho */
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; border-bottom: 1px solid #ccc; padding-bottom: 10px; }
        .user-info { display: flex; align-items: center; gap: 10px; }
        .badge-admin { background-color: #343a40; color: #fff; padding: 2px 6px; border-radius: 4px; font-size: 0.75em; font-weight: bold; }

        /* Painel Admin */
        .admin-panel { background-color: #e9ecef; padding: 15px; border-radius: 5px; margin-bottom: 20px; border-left: 5px solid #343a40; }

        /* Filtros */
        .filtros-box {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin: 20px 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .filtros-box form { display: flex; gap: 10px; align-items: center; flex-wrap: wrap; }

        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 10px; text-align: center; }
        th { background-color: #f4f4f4; }
        
        /* Status */
        .status-agendado { background-color: #fff3cd; color: #856404; padding: 5px; border-radius: 4px; font-weight: bold; }
        .status-realizado { background-color: #d4edda; color: #155724; padding: 5px; border-radius: 4px; font-weight: bold; }
        .status-cancelado { background-color: #f8d7da; color: #721c24; padding: 5px; border-radius: 4px; font-weight: bold; }

        /* Bot√µes */
        .btn-action { cursor: pointer; border: none; padding: 5px 10px; border-radius: 4px; color: white; margin: 0 2px; }
        .btn-check { background-color: #28a745; }
        .btn-cancel { background-color: #dc3545; }
        .btn-filter { background-color: #007bff; color: white; border: none; padding: 5px 15px; border-radius: 4px; cursor: pointer; }
        .btn-link { text-decoration: none; color: #007bff; font-weight: bold; }
        .btn-link:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="header">
        <h1>üìÖ Agenda da Barbearia</h1>
        <div class="user-info">
            <span>Bem-vindo!</span>
            
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                <span class="badge-admin">ADMIN</span>
            <% } %>
            
            | <a href="/logout" style="color: red; text-decoration: none;">Sair (Logout)</a>
        </div>
    </div>

    <div>
        <a href="/" class="btn-link">üè† Home</a> | 
        <a href="/agendamentos/criar" class="btn-link">Ôºã Novo Agendamento</a>
    </div>

    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
        <div class="admin-panel">
            <strong>üîí Painel do Administrador:</strong>
            <br><br>
            <a href="/registrar" class="btn-link" style="margin-right: 20px;">üë§ Cadastrar Novo Usu√°rio/Admin</a>
            
            <a href="/profissionais" class="btn-link" style="margin-right: 20px;">‚úÇÔ∏è Gerenciar Profissionais</a>
            
            <a href="/servicos/gerenciar" class="btn-link">üè∑Ô∏è Gerenciar Servi√ßos</a>
        </div>
    <% } %>
    
    <div class="filtros-box">
        <strong>Filtrar por:</strong>
        <form action="/agendamentos" method="GET">
            <label>
                Data: <input type="date" name="data">
            </label>
            
            <label>
                Status:
                <select name="status">
                    <option value="">Todos</option>
                    <option value="agendado">Agendado</option>
                    <option value="realizado">Realizado</option>
                    <option value="cancelado">Cancelado</option>
                </select>
            </label>

            <button type="submit" class="btn-filter">Buscar</button>
            <a href="/agendamentos" class="btn-link" style="font-size: 0.9em; margin-left: 10px;">Limpar filtros</a>
        </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Hora</th>
                <th>Profissional</th>
                <th>Servi√ßo</th>
                <th>Status</th>
                <th>A√ß√µes</th>
            </tr>
        </thead>
        <tbody>
            <% if (agendamentos.length === 0) { %>
                <tr>
                    <td colspan="6" style="color: #666; padding: 20px;">
                        Nenhum agendamento encontrado para os filtros selecionados.
                    </td>
                </tr>
            <% } %>

            <% agendamentos.forEach(a => { %>
                <tr>
                    <td><%= new Date(a.dataHora).toLocaleDateString('pt-BR', {timeZone: 'UTC'}) %></td>
                    <td><%= new Date(a.dataHora).toLocaleTimeString('pt-BR', {hour: '2-digit', minute:'2-digit', timeZone: 'UTC'}) %></td>
                    
                    <td><%= a.Profissional ? a.Profissional.nome : 'N/A' %></td>
                    <td><%= a.Servico ? a.Servico.nome : 'N/A' %></td>
                    
                    <td>
                        <span class="status-<%= a.status %>"><%= a.status.toUpperCase() %></span>
                    </td>
                    
                    <td>
                        <% if (a.status === 'agendado') { %>
                            <form action="/agendamentos/<%= a.id %>/concluir" method="POST" style="display:inline;">
                                <button class="btn-action btn-check" title="Marcar como Realizado">‚úî</button>
                            </form>

                            <form action="/agendamentos/<%= a.id %>/cancelar" method="POST" style="display:inline;">
                                <button class="btn-action btn-cancel" title="Cancelar Agendamento">‚úñ</button>
                            </form>
                        <% } else { %>
                            -
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>